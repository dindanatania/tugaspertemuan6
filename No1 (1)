package pertemuan6;

public class LatihanSegitiga {
    
    public static void main(String[] args) {
        
    //Memanggil class Segitiga.java
    
    Segitiga objSegitiga1 = new Segitiga();
    double alasBaru = objSegitiga1.alas = 1;
    double tinggiBaru = objSegitiga1.tinggi = 1;
    double sisiBaru = objSegitiga1.sisi = 1;
    // Mencetak perhitungan lingkaran dari class (Lingkaran.java)
    System.out.println("SEGITIGA 1");
    System.out.println("Luasnya: "+objSegitiga1.getLuas());
    System.out.println("Kelilingnya: "+objSegitiga1.getKeliling());
    
    
    Segitiga objSegitiga2 = new Segitiga();
    objSegitiga2.setAlas(30);
    objSegitiga2.setTinggi(10);
    objSegitiga2.setSisi(90);
    // Mencetak perhitungan lingkaran dari class (Lingkaran.java)
    System.out.println("SEGITIGA 2");
    System.out.println("Luasnya: "+objSegitiga2.getLuas());
    System.out.println("Kelilingnya: "+objSegitiga2.getKeliling());
    
    
    Segitiga objSegitiga3 = new Segitiga(20, 30, 60);
    // Mencetak perhitungan lingkaran dari class (Lingkaran.java)
    System.out.println("SEGITIGA 3");
    System.out.println("Luasnya: "+objSegitiga3.getLuas());
    System.out.println("Kelilingnya: "+objSegitiga3.getKeliling());
    }
}
